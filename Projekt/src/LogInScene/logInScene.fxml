<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Rectangle?>

<GridPane alignment="center" hgap="10" prefHeight="700.0" prefWidth="1000.0" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="LogInScene.LogInController">

    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <Pane  prefHeight="724.0" prefWidth="1000.0">
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="187.0" layoutX="390.0" layoutY="226.0"
                   stroke="BLACK" strokeType="INSIDE" width="221.0"/>
        <Button  layoutX="426.0" layoutY="320.0" mnemonicParsing="false"
                onAction="#logInButtonClicked" text="Prihlásiť sa"/>
        <ImageView fitHeight="127.0" fitWidth="159.0" layoutX="827.0" layoutY="14.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@../data/Logo.png"/>
        </ImageView>
        <TextField fx:id="loginText" layoutX="426.0" layoutY="247.0" promptText="Login" text="x"/>
        <Button  layoutX="502.0" layoutY="320.0" mnemonicParsing="false" onAction="#quitButton"
                prefHeight="25.0" prefWidth="73.0" text="Ukončiť"/>
        <Button layoutX="464.0" layoutY="363.0" mnemonicParsing="false"
                onAction="#newUserButton" text="Registrácia"/>
        <PasswordField fx:id="passText" layoutX="425.0" layoutY="280.0" promptText="Heslo"/>
    </Pane>
</GridPane>
